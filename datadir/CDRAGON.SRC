  if(subtype == 2)
    // Blue Dragon - Fast Recharge
    self.tetimer = 150
  if(subtype == 3)
    // Black Dragon - Normal Recharge
    self.tetimer = 300
  if(subtype == 4)
    // White Dragon - Slow Recharge
    self.tetimer = 450


