int SetupStats()
  int self, subtype


  self = FindSelf()
  subtype = ((self.eqcol01>>4) * 5)>>4
  self.defedge = 6
  self.defbash = 4
  if(subtype == 0)
    // Red Dragon - Slow Recharge - Super strong...
    self.hitsmax = 40
    self.manamax = 10
    self.str = 50
    self.dex = 15
    self.int = 15
    self.defedge = self.defedge + 4
    self.defbash = self.defbash + 2
    self.defice = -4
    self.deffire = 8
    self.defacid = 4
    self.defvolt = 4
  if(subtype == 1)
    // Green Dragon - Normal Recharge - Fast
    self.hitsmax = 30
    self.manamax = 10
    self.str = 15
    self.dex = 30
    self.int = 15
    self.defice = 4
    self.deffire = 4
    self.defacid = 8
    self.defvolt = 4
    self.sflags = self.sflags | SCRIPT_NO_POISON
  if(subtype == 2)
    // Blue Dragon - Fast Recharge - Intelligent...
    self.hitsmax = 20
    self.manamax = 10
    self.str = 15
    self.dex = 15
    self.int = 30
    self.defice = 4
    self.deffire = 4
    self.defacid = 4
    self.defvolt = 8
  if(subtype == 3)
    // Black Dragon - Normal Recharge - Intelligent
    self.hitsmax = 20
    self.manamax = 10
    self.str = 15
    self.dex = 15
    self.int = 50
    self.defice = 4
    self.deffire = 4
    self.defacid = 8
    self.defvolt = 4
  if(subtype == 4)
    // White Dragon - Slow Recharge - Balanced...
    self.hitsmax = 30
    self.manamax = 10
    self.str = 30
    self.dex = 30
    self.int = 30
    self.defice = 8
    self.deffire = -4
    self.defacid = 4
    self.defvolt = 4
  self.hitsmax = self.hitsmax + RollDice(2, 6)
  self.manamax = self.manamax + RollDice(2, 6)
  self.str = self.str + RollDice(2, 6)
  self.dex = self.dex + RollDice(2, 6)
  self.int = self.int + RollDice(2, 6)
  self.hits = self.hitsmax
  self.mana = self.manamax


